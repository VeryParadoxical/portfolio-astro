---
import { Image } from "astro:assets";
import Socials from "../Socials.astro";
import astro from "../../assets/technologies/astro2.svg";
import tailwind from "../../assets/technologies/tailwind.svg";
import netlify from "../../assets/technologies/netlify.svg";

const year = new Date().getFullYear();
const stackRowClass= "flex items-center space-x-2 justify-center md:justify-end";
---
<footer
  class="col-span-full flex w-full flex-col items-center gap-4 md:gap-0 md:flex-row md:items-end md:justify-between"
>
  <Socials />
  <div class="flex flex-col space-y-2">
    <div class={stackRowClass}>
      <span>Built with</span>
      <Image src={astro} alt="Astro" width={40} loading="lazy" />
    </div>
    <div class={stackRowClass}>
      <span>Styled with</span>
      <Image src={tailwind} alt="Tailwind" width={40} loading="lazy" />
    </div>
    <div class={stackRowClass}>
      <span>Deployed on</span>
      <Image src={netlify} alt="Netlify" width={40} loading="lazy" />
    </div>
    <p class="prose-sm text-center md:text-right">
      Copyright Â© {year} Adam Milner. All rights reserved.
    </p>
  </div>
</footer>
